{
	"$schema": "./node_modules/oxfmt/configuration_schema.json",
	"printWidth": 120,
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"singleQuote": false,
	"trailingComma": "all",
	"endOfLine": "lf",
	"insertFinalNewline": true,
	"experimentalTailwindcss": {
		"functions": ["clsx", "cn", "cva"]
	},
	"experimentalSortImports": {},
	"ignorePatterns": [".next", "dist", "build"]
}
